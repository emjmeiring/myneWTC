NAME = libftprintf.a
FLAG = -Wall -Wextra -Werror
PATH_SRC = ./
HEADER = ./ 
LINK = -I
LIBINCLUDES = ./libft/includes
OPTION = -c -I $(HEADER)

SRC = $(PATH_SRC)specifier_lexer.c $(PATH_SRC)ft_printf.c

OBJ = specifier_lexer.o ft_printf.o

all: $(NAME)

$(NAME):
	#make -C libft/ fclean && make -C libft/
	gcc $(FLAG) -c -I ./ -I ./libft/includes/ -c $(SRC) -o $(OBJ)
	ar rc $(NAME) $(OBJ)
	ranlib $(NAME)
	
	
clean:
	/bin/rm -f $(OBJ)
fclean: clean
	/bin/rm -f $(NAME)

re: fclean all
